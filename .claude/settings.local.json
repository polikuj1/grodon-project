{
  "permissions": {
    "allow": [
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(pkill:*)",
      "Bash(rm:*)",
      "Bash(mkdir:*)",
      "Bash(timeout 5s npm run dev)",
      "Bash(curl:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "say 'all done'"
          }
        ]
      }
    ]
  }
}